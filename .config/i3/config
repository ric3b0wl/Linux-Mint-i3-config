        colors {
    background #130A20
    statusline #000000
    separator  #FFFFFF

    focused_workspace  #9900FF #42007B #FFFFFF
    active_workspace   #88FF84 #057900 #FFFFFF
    inactive_workspace #333333 #222222 #888888
    urgent_workspace   #2F343A #900000 #FFFFFF
    binding_mode       #6863FF #0800FF #FFFFFF
    }
        status_command i3status
}

# window rules, you can find the window class using xprop
for_window [class=".*"] border pixel 2

#floating window when launch
for_window [class=Viewnior|feh|File-roller|Lxappearance|Pavucontrol|Nm-connection-editor|GitHub-Desktop] floating enable
for_window [title="GitHub Desktop"] floating enable

